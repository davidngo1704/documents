                                "confirm_accept_classname": "p-button-danger",
                                "confirm_accept_label": "Có",
                                "confirm_reject_label": "Không",
                                "icon": "pi pi-trash",
                                "className": "p-button-rounded p-button-warning"
                            }
                        ]
                    },
                    "Columns": [
                        {
                            "field": "Code",
                            "header": "Mã",
                            "style": {
                                "width": "30%"
                            }
                        },
                        {
                            "field": "Value",
                            "header": "Giá trị",
                            "style": {
                                "width": "40%"
                            }
                        },
                        {
                            "field": "SeqNo",
                            "header": "Số thứ tự",
                            "style": {
                                "width": "10%"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "Name": "RowButton",
            "Control": 1,
            "ControlClass": "right-align",
            "Controls": [
                {
                    "Name": "AddDetail",
