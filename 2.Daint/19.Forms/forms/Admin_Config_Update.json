    "Buttons": [
        {
            "Name": "Save",
            "Control": 13,
            "IsBlockUI": true,
            "IsCheckValidateForm": true,
            "Type": "CallApi",
            "Request": {
                "method": "PUT",
                "endpoint": "configuration/Config/Update",
                "payload": {}
            },
            "props": {
                "label": "Ghi lại",
                "className": "p-mr-2 p-mb-2"
            }
