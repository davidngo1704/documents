{
    "Controls": [
        {
            "Name": "Row1",
            "Control": 1,
            "Controls": [
                {
                    "Name": "UserName",
                    "Title": "Tên đăng nhập",
                    "Control": 7,
                    "Validations": {
                        "Required": true
                    },
                    "LabelClass": "p-col-12 p-mb-1 p-md-1",
                    "ControlClass": "p-col-12 p-mb-5 p-md-5"
                },
                {
                    "Name": "FullName",
                    "Title": "Họ và tên",
                    "Control": 7,
                    "LabelClass": "p-col-12 p-mb-1 p-md-1",
                    "ControlClass": "p-col-12 p-mb-5 p-md-5"
                }
            ]
        },
        {
            "Name": "Row2",
            "Control": 1,
            "Controls": [
                {
                    "Name": "PhoneNumber",
                    "Title": "Số điện thoại",
                    "Control": 7,
                    "LabelClass": "p-col-12 p-mb-1 p-md-1",
                    "ControlClass": "p-col-12 p-mb-5 p-md-5"
                },
                {
                    "Name": "Email",
                    "Title": "Email",
                    "Control": 7,
                    "LabelClass": "p-col-12 p-mb-1 p-md-1",
                    "ControlClass": "p-col-12 p-mb-5 p-md-5"
                }
            ]
        },
        {
            "Name": "Row3",
            "Control": 1,
            "Controls": [
                {
                    "Name": "Password",
                    "Title": "Mật khẩu",
                    "Control": 7,
                    "LabelClass": "p-col-12 p-mb-1 p-md-1",
                    "ControlClass": "p-col-12 p-mb-5 p-md-5"
                },
                {
                    "Name": "Type",
                    "Title": "Kiểu",
                    "Control": 5,
                    "Request": {
                        "method": "post",
                        "endpoint": "configuration/ConfigDetail/Filter",
                        "payload": {
                            "ConfigID": 8
                        }
                    },
                    "PreHandleItems": "function:#(item) => { item.Value = +item.Value; }",
                    "props": {
                        "placeholder": "Chọn kiểu",
                        "optionLabel": "Code",
                        "optionValue": "Value",
                        "filter": true,
                        "showClear": true,
                        "filterBy": "Code",
                        "showFilterClear": true
                    },
                    "LabelClass": "p-col-12 p-mb-1 p-md-1",
                    "ControlClass": "p-col-12 p-mb-5 p-md-5"
                }
            ]
        },
        {
            "Name": "RowTable",
            "Control": 1,
            "Controls": [
                {
                    "Name": "Table",
                    "Control": 9,
                    "props": {
                        "header": "Danh sách vai trò"
                    },
                    "Request": {
                        "method": "POST",
                        "endpoint": "authentication/UserRole/Filter",
                        "payload": {
                            "UserId": <%= Id %>
                        }
                    },
                    "ActionRow": {
                        "Buttons": [
                            {
                                "name": "Edit",
                                "icon": "pi pi-pencil",
                                "className": "p-button-rounded p-button-success p-mr-2"
                            },
                            {
                                "name": "Delete",
                                "is_confirm_button": true,
                                "confirm_message": "Bạn có muốn xoá không?",
                                "confirm_icon": "pi pi-info-circle",
                                "confirm_accept_classname": "p-button-danger",
                                "confirm_accept_label": "Có",
                                "confirm_reject_label": "Không",
                                "icon": "pi pi-trash",
                                "className": "p-button-rounded p-button-warning"
                            }
                        ]
                    },
                    "Columns": [
                        {
                            "field": "RoleId",
                            "header": "Mã Vai trò",
                            "style": {
                                "width": "30%"
                            }
                        },
                        {
                            "field": "OrganizationId",
                            "header": "Mã đơn vị",
                            "style": {
                                "width": "40%"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "Name": "RowButton",
            "Control": 1,
            "ControlClass": "right-align",
            "Controls": [
                {
                    "Name": "AddDetail",
                    "Control": 13,
                    "props": {
                        "className": "p-button-rounded p-button-success p-button-text",
                        "icon": "pi pi-plus"
                    }
                }
            ]
        }
    ],
    "Buttons": [
        {
            "Name": "Save",
            "Control": 13,
            "IsBlockUI": true,
            "IsCheckValidateForm": true,
            "Type": "CallApi",
            "Request": {
                "method": "PUT",
                "endpoint": "authentication/User/Update",
                "payload": {}
            },
            "props": {
                "label": "Ghi lại",
                "className": "p-mr-2 p-mb-2"
            }
        }
    ],
    "ExternalControls": [
        {
            "Name": "DialogAdd",
            "Control": 11,
            "Width": 90,
            "props": {
                "header": "Thêm mới vai trò",
                "keepInViewport": false,
                "maximized": true,
                "maximizable": true,
                "dismissableMask": true
            }
        },
        {
            "Name": "DialogUpdate",
            "Control": 11,
            "Width": 90,
            "props": {
                "header": "Chi tiết vai trò",
                "keepInViewport": false,
                "maximized": true,
                "maximizable": true,
                "dismissableMask": true
            }
        }
    ]
}